import java.util.Scanner;

public class SuperDigit {
    // Method to compute super digit recursively
    public static int findSuperDigit(long num) {
        if (num < 10) {
            return (int) num;
        }
        long sum = 0;
        while (num > 0) {
            sum += num % 10;
            num /= 10;
        }
        return findSuperDigit(sum);
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter an integer (up to 18 digits): ");
        long number = sc.nextLong();

        int superDigit = findSuperDigit(number);
        System.out.println("Super Digit of " + number + ": " + superDigit);

        sc.close();
    }
}
